<div style="padding-left:20%">
  <% if @book.errors.any? %>
    <h2 style="color:red"><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
    <ul style="color:red">
    <% @book.errors.full_messages.each do |message| %>
      <li style="color:red"><%= message %></li>
    <% end %>

  <% end %>
</div>
<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'users/list',user:current_user %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h1>
      <table class="table table-hover table-inverse">
        <tr>
          <th> </th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
              <%= attachment_image_tag book.user, :profile_image , :fill,40,40,fallback:"no_image.jpg" ,size:"40x40" %></td>
              <% end %>

            <td><%= link_to book.title,book_path(book.id) %></td>

            <td><%= book.body %></td>

            <td>
            <% if book.favorites_by?(current_user,book) %>
              <p>
                <%= link_to book_favorites_path(book), method: :delete do %>
                  <i class="fas fa-heart" style="color:red"></i>
                  <%= book.favorites.count %>
                <% end %>
              </p>
            <% else %>
              <p>
                <%= link_to book_favorites_path(book), method: :post do %>
                  <i class="fas fa-heart"></i>
                  <%= book.favorites.count %>
                <% end %>
              </p>
            <% end %>
            </td>
            <td>
              <p>コメント数:<%= book.book_comments.count %></p>
            </td>
          </tr>

        <% end %>
      </table>
    </div>
  </div>
</div>
